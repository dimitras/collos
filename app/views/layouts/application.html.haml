!!!
%html
  %head
    %title Collos
    %meta{:charset => "utf-8"}
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = stylesheet_link_tag :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags
  %body
    #container.container
      %header.row
        #nav.span12
          = render 'layouts/navigation'
        #messages.span12
          = render 'layouts/messages'
      #content.row
        .span12= yield
      %footer.row
    .js
      = yield :js
