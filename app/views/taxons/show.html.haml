%h3= @taxon.scientific_name

=link_to "Edit taxon", edit_taxon_path(@taxon), method: 'get', class: 'btn btn-success'
- if can? :destroy , @taxon
    =link_to "Delete taxon", taxon_path(@taxon), method: 'delete', class: 'btn btn-danger', confirm: "Are you sure? We can't undo this ..."
=link_to "See all taxons", taxons_path, method: 'get', class: 'btn'

%br 
%br

%table.table.table-bordered
    %tr
        %th.span3 NCBI id
        %td=@taxon.ncbi_id
    %tr
        %th Scientific name
        %td=@taxon.scientific_name
    %tr
        %th Common name
        %td=@taxon.common_name

