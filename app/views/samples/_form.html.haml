=simple_form_for @sample, html: {class: 'form-horizontal'} do |f|
    .control-group
        = f.label :scientific_name, "Taxon Name", class: 'control-label'
        .controls= f.autocomplete_field :scientific_name, autocomplete_taxon_scientific_name_samples_path
    =f.input :name
    =f.input :notes
    =f.button :submit
