%h3= @container.name

%table.table.table-bordered
    %tr
        %th.span3 Name
        %td=@container.name
    %tr
        %th Container Type
        %td=link_to @container.container_type.pretty_string, container_type_path(@container.container_type)
    %tr
        %th Barcode
        %td=link_to @container.barcode.barcode, barcode_path(@container.barcode)

- if can? :edit , @container
    =button_to "Edit container", edit_container_path(@container), method: 'get', class: 'btn btn-success'
- if can? :destroy , @container
    =button_to "Delete container", container_path(@container), method: 'delete', class: 'btn btn-danger', confirm: "Are you sure? We can't undo this ..."
