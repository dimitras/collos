%h3 Container Type Information

%table.table.table-bordered
    %tr
        %th.span3 Name
        %td=@container_type.name
    %tr
        %th Container Type Term

        %td
            =link_to "#{@type.name} [#{@type.ontology.prefix}: #{@type.accession}]", ontology_term_url(@type)
    %tr
        %th X Dimension
        %td=@container_type.x_dimension
    %tr
        %th Y Dimension
        %td=@container_type.y_dimension
    %tr
        %th Retired
        %td=@container_type.retired? ? "Yes" : "No"

- if can? :edit , @container_type
    =button_to "Edit container type", edit_container_type_path(@container_type), method: 'get', class: 'btn btn-success'
- if can? :destroy , @container_type
    =button_to "Retire container type", container_type_path(@container_type), method: 'delete', class: 'btn btn-danger'
=button_to "See all container types", container_types_path(), class: 'btn', method: 'get'
