%h3 User Information

%table.table.table-striped.table-condensed.table-bordered
    %thead
        %tr
            %th Name
            %th E-mail
            %th Status
    %tbody
        %tr
            %td=@user.name
            %td=@user.email
            %td
                = @user.status
                -if current_user and current_user.admin?
                    -if @user.active?
                        |
                        =link_to("Make Inactive", inactivate_user_path(@user), method: 'post')
                        |
                    -else
                        |
                        =link_to("Activate User", activate_user_path(@user), method: 'post')
                        |
-if @user.contact
    = render :partial, "contact_information"
-else
    %h3= link_to "Add Contact Information", new_contact_path( user_id: @user.id)
